{
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "name": "Code Pad",
  "description": "An awesome multi-language IDE crafted for Chrome OS",
  "app": {
    "background": {
      "scripts": [
        "/src/js/app.js"
      ]
    }
  },
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  },
  "permissions": [
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "storage",
    "clipboardRead",
    "fullscreen"
  ]
}